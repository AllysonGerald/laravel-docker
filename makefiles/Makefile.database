	@echo "$(GREEN)ðŸ—„ï¸  Executando migrations...$(NC)"
	docker compose exec php php artisan migrate

migrate-fresh: ## Dropa tudo e recria (âš ï¸ APAGA DADOS!)
	@echo "$(RED)âš ï¸  ATENÃ‡ÃƒO: Isso vai apagar todos os dados!$(NC)"
